---
interface Props {
  type: "info" | "warning";
}

const { type } = Astro.props;

const colorClasses =
  type === "warning"
    ? "border-red-500 bg-red-500/5"
    : "border-blue-700 bg-blue-700/5";
---

<div class={`border-l-4 py-4 px-6 ${colorClasses}`}>
  <p class="text-base leading-relaxed text-stone-950/80">
    <slot />
  </p>
</div>
