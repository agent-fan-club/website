---
import SectionLabel from "../ui/SectionLabel.astro";
import { getCollection } from 'astro:content';

const postsCollection = await getCollection('blog');
postsCollection.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const latestPosts = postsCollection.slice(0, 5);
const totalCount = postsCollection.length;

const posts = latestPosts.map((post, index) => ({
  id: `5.${index + 1}`,
  slug: post.id,
  title: post.data.title,
  date: post.data.date,
  author: post.data.author,
  topics: post.data.topics,
  readTime: post.data.readTime,
}));
---

<section id="blog" class="mx-auto w-full max-w-[1600px] px-6 py-20 md:px-8 md:py-24 scroll-mt-24">
  <SectionLabel number="5.0" title="Documentation & Blog" />

  <div class="space-y-2">
    {
      posts.map((post) => (
        <a href={`/blogs/${post.slug}`} class="block">
          <article class="group relative cursor-pointer border-l-[3px] border-stone-950 py-6 pl-8 transition-all duration-300 hover:border-blue-700 hover:bg-stone-100/70">
            <span class="absolute -left-[7px] top-8 h-3 w-3 rotate-45 bg-stone-950 transition-all duration-500 group-hover:scale-125 group-hover:rotate-[405deg] group-hover:bg-blue-700"></span>

            <div class="flex items-start justify-between gap-8">
              <div class="flex-1 space-y-3">
                <div class="flex flex-wrap items-baseline gap-4">
                  <span class="font-['JetBrains_Mono'] text-xs font-bold tracking-[0.1em] text-stone-950/60 transition-colors duration-200 group-hover:text-blue-700">
                    {post.id}
                  </span>
                  <h3 class="text-2xl font-semibold tracking-wide transition-all duration-300 group-hover:translate-x-2 group-hover:text-blue-700">
                    {post.title}
                  </h3>
                </div>

                <div class="flex flex-wrap items-center gap-4 md:gap-6">
                  <span class="font-['JetBrains_Mono'] text-[11px] font-semibold tracking-[0.05em] text-stone-600">{post.date}</span>
                  <span class="text-[13px] text-stone-950/60">by {post.author}</span>
                  <div class="flex gap-2">
                    {
                      post.topics.map((topic) => (
                        <span class="border border-stone-950/20 bg-stone-100 px-2 py-1 font-['JetBrains_Mono'] text-[10px] font-semibold transition-all duration-300 group-hover:border-blue-700 group-hover:bg-blue-50">
                          {topic}
                        </span>
                      ))
                    }
                  </div>
                  <span class="text-xs text-stone-600">{post.readTime}</span>
                </div>
              </div>

              <span class="font-['JetBrains_Mono'] text-lg font-bold text-blue-700 opacity-0 transition-all duration-300 group-hover:translate-x-2 group-hover:opacity-100">
                →
              </span>
            </div>
          </article>
        </a>
      ))
    }
  </div>

  <div class="mt-16 flex flex-col items-start justify-between gap-6 border-t-2 border-stone-950 pt-12 md:flex-row md:items-center">
    <a href="/blogs" class="group/btn relative inline-block overflow-hidden border-2 border-stone-950 px-8 py-4">
      <span class="relative z-10 font-['JetBrains_Mono'] text-xs font-bold tracking-[0.1em] transition-colors duration-300 group-hover/btn:text-stone-50">
        View All {totalCount} Posts →
      </span>
      <span class="absolute inset-0 translate-y-full bg-stone-950 transition-transform duration-300 group-hover/btn:translate-y-0"></span>
    </a>
  </div>
</section>
